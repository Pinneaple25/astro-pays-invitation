<section class="bg-[#ae0055] px-8 py-16 text-white">
  <h2 class="text-2xl text-center">TE INVITAMOS A NUESTRA BODA</h2>

  <p class="my-4">Último día para confirmar asistencia: 10 de febrero.</p>

  <input
    id="nombre"
    type="text"
    placeholder="Escribe tu nombre"
    class="border mb-8 border-gray-400 bg-white placeholder:text-[#ea7c80] rounded-lg p-2 text-[#ae0055]"
  />

  <a
    id="whatsapp-link"
    href="#"
    target="_blank"
    class="rounded-2xl border px-10 py-4"
  >
    Confirmar
  </a>
</section>

<script>
  const input = document.getElementById('nombre');
  const link = document.getElementById('whatsapp-link');

  const phoneNumber = '5216864057656';

  input?.addEventListener('input', () => {
    const name = input.value.trim();
    const message = `Hola, soy ${name || '...'}\n¡Confirmo mi asistencia para su boda!`;
    const encodedMessage = encodeURIComponent(message)

    const url = `https://wa.me/${phoneNumber}?text=${encodedMessage}`;
    link.href = url;
  });
</script>
